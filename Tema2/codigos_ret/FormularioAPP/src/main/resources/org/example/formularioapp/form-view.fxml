<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane fx:controller="org.example.formularioapp.FormController" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <bottom>
      <FlowPane alignment="CENTER" hgap="12.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="buttonAgregar" mnemonicParsing="false" text="Agregar" />
            <Button fx:id="buttonEliminar" mnemonicParsing="false" text="Eliminar" />
            <Button fx:id="buttonDetalle" mnemonicParsing="false" text="Detalle" />
            <ToggleButton fx:id="toggleLista" mnemonicParsing="false" text="Ver lista" />
         </children>
      </FlowPane>
   </bottom>
   <padding>
      <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
   </padding>
   <right>
      <FlowPane fx:id="panelLista" alignment="CENTER" prefWrapLength="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Lista" />
         </children>
      </FlowPane>
   </right>
   <center>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <TextField fx:id="textfieldApellido" alignment="CENTER" promptText="introduce apellido" GridPane.rowIndex="1" />
            <TextField fx:id="textFieldNombre" alignment="CENTER" promptText="introduce nombre" />
            <TextField fx:id="textfieldCorreo" alignment="CENTER" promptText="introduce correo" GridPane.rowIndex="2" />
            <ComboBox fx:id="comboEdad" maxWidth="1.7976931348623157E308" promptText="Selecciona la edad" GridPane.rowIndex="3" />
            <FlowPane alignment="CENTER_RIGHT" hgap="12.0" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="4">
               <children>
                  <RadioButton fx:id="radioMasculino" mnemonicParsing="false" text="Masculino" />
                  <RadioButton fx:id="radioFemenino" mnemonicParsing="false" text="Femenino" />
               </children>
            </FlowPane>
            <CheckBox fx:id="checkDisponibilidad" alignment="CENTER_RIGHT" mnemonicParsing="false" text="Disponibilidad" GridPane.rowIndex="5" />
         </children>
      </GridPane>
   </center>
</BorderPane>
